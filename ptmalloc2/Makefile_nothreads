# Makefile for ptmalloc, version 2
# by Wolfram Gloger 1996-1999, 2001, 2002, 2003, 2004, 2006
# iam: snip snip; trimmed and cleaned up 

LDFLAGS = -shared -fPIC

CFLAGS = -D_GNU_SOURCE=1                          \
	-g -O                                     \
	-Wall -Wstrict-prototypes                 \
	-fPIC                                     \
	-DUSE_ARENAS=0                            \
	-DNDEBUG                                  \
	-Isysdeps/generic -I. 

#	-DMALLOC_DEBUG				  \


MALLOCOBJ = malloc.o malloc-stats.o

LIB_MALLOC = libmalloc.a

%.o: %.c %.h 
	$(CC) $(CFLAGS)  $< -c 

all: $(METAOBJ) malloc.so $(LIB_MALLOC) replay

libmalloc.a: $(MALLOCOBJ)
	ar cr $@ $(MALLOCOBJ)
	ranlib $@

shared: $(METAOBJ) malloc.so 

malloc.so: $(MALLOCOBJ) malloc.h
	$(CC)  $(CFLAGS) $(MALLOCOBJ) $(LDFLAGS) -o $@

lphash.o:
	$(CC) $(CFLAGS) -I../lphash ../lphash/lphash.c -c

replaylib.o:
	$(CC) $(CFLAGS) -I../lphash -I../mhooks $(T_FLAGS) replaylib.c -c

replay: replay.c $(MALLOCOBJ) lphash.o replaylib.o 
	$(CC) $(CFLAGS) -I../lphash $(T_FLAGS) replay.c $(MALLOCOBJ)  lphash.o replaylib.o  -o  $@

testreplay: replay
	./replay ../../analysis/data/yices_smt2_2668e3c6.txt


clean:
	rm -f $(MALLOCOBJ) libmalloc.a malloc.so lphash.o replaylib.o replay


# dependencies
malloc.o: arena.c hooks.c
